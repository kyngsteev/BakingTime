<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    android:id="@+id/card_view"
    android:clickable="true"
    card_view:cardCornerRadius="@dimen/card_recipe_radius"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_cover_height"
                android:scaleType="centerCrop"
                android:src="@drawable/nutella_pie" />

            <TextView
                android:id="@+id/recipe_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipe"
                android:paddingLeft="@dimen/recipe_title_padding"
                android:paddingRight="@dimen/recipe_title_padding"
                android:paddingTop="@dimen/recipe_title_padding"
                android:textColor="@color/recipe_title"
                android:textSize="@dimen/recipe_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="@dimen/recipe_text_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Nutella Pie"
                    android:paddingLeft="@dimen/recipe_title_padding"
                    android:paddingRight="@dimen/recipe_title_padding"
                    android:textColor="@color/recipe_title"
                    android:textSize="@dimen/recipe_title" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="@dimen/recipe_text_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Servings :"
                    android:paddingBottom="@dimen/songs_count_padding_bottom"
                    android:paddingLeft="@dimen/recipe_title_padding"
                    android:paddingRight="@dimen/recipe_title_padding"
                    android:textSize="@dimen/servings_count" />

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>
