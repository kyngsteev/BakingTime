<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_layout_margin"
        android:layout_marginRight="@dimen/widget_layout_margin"
        android:paddingBottom="@dimen/widget_layout_padding"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredient_text"
            android:paddingTop="@dimen/padding8dp"
            android:text="Nutella or other chocolate-hazelnut spread"
            android:textSize="@dimen/widget_ingredient_textsize"
            android:gravity="center_horizontal"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_layout_margin"
        android:layout_marginRight="@dimen/widget_layout_margin"
        android:paddingTop="@dimen/widget_layout_padding"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/linear_layout_width"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/measure_text"
                    android:textSize="@dimen/item_text"
                    android:text="MEASURE"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/measure_value"
                    android:text="OZ"
                    android:textSize="@dimen/item_value"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/linear_layout_width"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantity_text"
                    android:textSize="@dimen/item_text"
                    android:text="QUANTITY"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantity_value"
                    android:text="4"
                    android:textSize="@dimen/item_value"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>